@using Microsoft.AspNetCore.Localization;
@using System.Globalization
@using ViveCortelazor.Extensions

@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vive Cortelazor - Sierra de Aracena</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ViveCortelazor.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap">
    <link rel="icon" type="image/svg+xml" href="~/fox.svg">
    <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <button class="z-3 btn btn-outline-light me-2 custom-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header">
                <a class="navbar-brand" href="@Url.RouteUrlLang("Index", ViewContext.GetLang())">
                    <img class="logo-navbar" src="~/fox.svg" alt="Cortelazor - Sierra de Aracena" />
                    Vive Cortelazor
                </a>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.RouteUrlLang("Index", ViewContext.GetLang())">@Localizer["Home"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.RouteUrlLang("Privacy", ViewContext.GetLang())">@Localizer["Privacy"]</a>
                    </li>
                </ul>
                <hr />
                <ul class="navbar-nav flex-grow-1">
                    @await Html.PartialAsync("_LanguagesCombo")
                </ul>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <div class="row align-items-center">
                <div class="col-sm-12 col-md-4 order-md-2">
                    <p>
                        <a href="@Url.RouteUrlLang("Index", ViewContext.GetLang())" title="@Localizer["Cortelazor and Sierra de Aracena"]">
                            <img class="logo-footer" src="~/fox.svg" alt="@Localizer["Cortelazor and Sierra de Aracena"]" />
                        </a>
                    </p>
                </div>

                <div class="col-sm-12 col-md-4 order-md-1">
                    <p><a href="@Url.RouteUrlLang("Index", ViewContext.GetLang())" title="@Localizer["Cortelazor and Sierra de Aracena"]">@Localizer["Cortelazor and Sierra de Aracena"]</a></p>
                    <p><a class="slim" href="@Url.RouteUrlLang("Privacy", ViewContext.GetLang())">@Localizer["Privacy"]</a></p>
                </div>

                <div class="col-sm-12 col-md-4 order-md-3">
                    <p class="social-icons">
                        <a class="social-icon" href="https://www.instagram.com/vivecortelazor/" title="Instagram Vive Cortelazor" target="_blank">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a class="social-icon" href="https://www.facebook.com/vivecortelazor/" title="Facebook Vive Cortelazor" target="_blank">
                            <i class="fab fa-facebook"></i>
                        </a>
                        <a class="social-icon" href="mailto:correo@correo.com" title="Email La Casita del Zorro">
                            <i class="far fa-envelope"></i>
                        </a>
                    </p>
                    <p>@Localizer["Developed by"] <a href="https://www.evaristocuesta.com" target="_blank" title="Evaristo Cuesta sofware developer">Evaristo Cuesta</a></p>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

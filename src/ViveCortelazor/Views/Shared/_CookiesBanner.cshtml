<!-- Cookie Consent Banner -->
<div id="cookieConsentBanner">
    <p>Our website uses cookies to enhance your experience. By continuing to use our website, you are agreeing to our use of cookies. Necessary cookies are always enabled.</p>

    <!-- Aditional container to align checkboxs -->
    <div class="cookie-group">
        <div class="cookie-options">
            <input type="checkbox" id="preferencesCookie" name="preferences" />
            <label for="preferencesCookie"></label>
            <span>Preferences</span>
        </div>
        <div class="cookie-options">
            <input type="checkbox" id="statisticalCookie" name="statistical" />
            <label for="statisticalCookie"></label>
            <span>Statistical</span>
        </div>
        <div class="cookie-options">
            <input type="checkbox" id="marketingCookie" name="marketing" />
            <label for="marketingCookie"></label>
            <span>Marketing</span>
        </div>
    </div>

    <button onclick="setCookieConsent()" class="cookie-button">Save Preferences</button>
    <button onclick="allowAllCookies()" class="cookie-button">Allow All Cookies</button>
</div>


<!-- Minimized Banner Button -->
<div id="minimizedConsentBanner" onclick="openConsentBanner()">
    <img alt="Cookies settings" src="data:image/svg+xml;base64," />
</div>
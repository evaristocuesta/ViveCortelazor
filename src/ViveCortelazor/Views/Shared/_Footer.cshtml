@using ViveCortelazor.Extensions

@inject IViewLocalizer Localizer

<footer class="border-top footer text-muted">
    <div class="container text-center">
        <div class="row align-items-center">
            <div class="col-sm-12 col-md-4 order-md-2">
                <p>
                    <a href="@Url.RouteUrl($"{ViewContext.GetLang()}/index")" title="@Localizer["Cortelazor and Sierra de Aracena"]">
                        <img class="logo-footer" src="~/images/fox.svg" alt="@Localizer["Cortelazor and Sierra de Aracena"]" />
                    </a>
                </p>
            </div>

            <div class="col-sm-12 col-md-4 order-md-1">
                <p><a href="@Url.RouteUrl($"{ViewContext.GetLang()}/index")" title="@Localizer["Cortelazor and Sierra de Aracena"]">@Localizer["Cortelazor and Sierra de Aracena"]</a></p>
                <p>
                    <a class="slim" href="@Url.RouteUrl($"{ViewContext.GetLang()}/privacy")">@Localizer["Privacy"]</a> -
                    <a class="slim" href="@Url.RouteUrl($"{ViewContext.GetLang()}/cookies")">@Localizer["Cookies"]</a>
                </p>
            </div>

            <div class="col-sm-12 col-md-4 order-md-3">
                <p class="social-icons">
                    <a class="social-icon" href="https://www.instagram.com/vivecortelazor/" title="Instagram Vive Cortelazor" target="_blank">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a class="social-icon" href="https://www.facebook.com/vivecortelazor/" title="Facebook Vive Cortelazor" target="_blank">
                        <i class="fab fa-facebook"></i>
                    </a>
                    <a class="social-icon" href="https://www.youtube.com/@@vivecortelazor" title="Youtube Vive Cortelazor" target="_blank">
                        <i class="fab fa-youtube"></i>
                    </a>
                    <a class="social-icon" href="mailto:info@vivecortelazor.es" title="Email Vive Cortelazor">
                        <i class="far fa-envelope"></i>
                    </a>
                </p>
                <p>@Localizer["Developed by"] <a href="https://www.evaristocuesta.com" target="_blank" title="Evaristo Cuesta sofware developer">Evaristo Cuesta</a></p>
            </div>
        </div>
    </div>
</footer>
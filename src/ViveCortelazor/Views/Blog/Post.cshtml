@inject IViewLocalizer Localizer
@model ViveCortelazor.Models.ContentViewModel

@{
    ViewData["Title"] = $"{Model.Title} - Vive Cortelazor - Sierra de Aracena";
    ViewData["Keywords"] = Model.Keywords;
    ViewData["Description"] = Model.Description;
    ViewData["Image"] = Model.Image;
    ViewData["ImageWidth"] = Model.ImageWidth;
    ViewData["ImageHeight"] = Model.ImageHeight;
    ViewData["Robots"] = Model.Robots;
}

<div class="container">
    <div class="article">
        <h1>@Model.Title</h1>
        <hr />
        <p class="post-date text-end">@Localizer["Published"] @Model.Date.ToLongDateString()</p>
        <markdown content="@Html.Raw(Model.Text)"></markdown>
    </div>
</div>